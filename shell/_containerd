#compdef containerd

autoload -U is-at-least

_containerd() {
    typeset -A opt_args
    typeset -a _arguments_options
    local ret=1

    if is-at-least 5.2; then
        _arguments_options=(-s -S -C)
    else
        _arguments_options=(-s -C)
    fi

    local context curcontext="$curcontext" state line
    _arguments "${_arguments_options[@]}" \
'-d+[Data directory path]:DATA_DIR:_files -/' \
'--data-dir=[Data directory path]:DATA_DIR:_files -/' \
'--store-endpoint=[ZMQ socket for connecting RGB node message bus]:STORE_ENDPOINT:_files' \
'--ctl=[ZMQ socket for internal service bus]:CTL_ENDPOINT:_files' \
'-h[Print help information]' \
'--help[Print help information]' \
'-V[Print version information]' \
'--version[Print version information]' \
'*-v[Set verbosity level]' \
'*--verbose[Set verbosity level]' \
&& ret=0
}

(( $+functions[_containerd_commands] )) ||
_containerd_commands() {
    local commands; commands=()
    _describe -t commands 'containerd commands' commands "$@"
}

_containerd "$@"
